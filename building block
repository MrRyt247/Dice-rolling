import random
import tkinter as tk

def roll_dice(num_dice, sides):
    rolls = [random.randint(1, sides) for _ in range(num_dice)]
    total = sum(rolls)
    return rolls, total

def roll_button_clicked():
    num_dice = int(num_dice_entry.get())
    sides = int(sides_entry.get())
    rolls, total = roll_dice(num_dice, sides)
    result_label.config(text=f"Rolls: {rolls}\nTotal: {total}")

# Create main window
root = tk.Tk()
root.title("Dice Rolling Simulator")

# Create widgets
num_dice_label = tk.Label(root, text="Number of Dice:")
num_dice_entry = tk.Entry(root)
sides_label = tk.Label(root, text="Number of Sides:")
sides_entry = tk.Entry(root)
roll_button = tk.Button(root, text="Roll Dice", command=roll_button_clicked)
result_label = tk.Label(root, text="Results will appear here")

# Layout widgets
num_dice_label.grid(row=0, column=0)
num_dice_entry.grid(row=0, column=1)
sides_label.grid(row=1, column=0)
sides_entry.grid(row=1, column=1)
roll_button.grid(row=2, column=0, columnspan=2)
result_label.grid(row=3, column=0, columnspan=2)

# Start the GUI event loop
root.mainloop()
