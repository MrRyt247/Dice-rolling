import random
import tkinter as tk
from tkinter import PhotoImage
import widget

roll_history = []

def roll_dice(num_dice, sides):
    rolls = [random.randint(1, sides) for _ in range(num_dice)]
    total = sum(rolls)
    return rolls, total

def roll_button_clicked(event=None):
    num_dice = int(num_dice_entry.get())
    sides = int(sides_entry.get())
    rolls, total = roll_dice(num_dice, sides)
    result_text = f"Rolls:\n{', '.join(str(roll) for roll in rolls)}\nTotal: {total}"
    result_label.config(text=result_text)
    roll_history.append(f"Rolled {num_dice} dice with {sides} sides: {rolls}\nTotal: {total}")

def clear_history():
    roll_history.clear()
        
def view_history():
    history_window = tk.Toplevel(root)
    history_window.title("Roll History")
    history_window.configure(bg='dark blue')
    history_window.iconphoto(False, PhotoImage(file="src/assets/history_favicon.png"))
    history_text = tk.Text(history_window, wrap=tk.WORD, font=("Maiandra GD", 12), fg='dark blue', bg='#ffe')
    history_text.pack(padx=5, pady=5)
    for roll in roll_history:
        history_text.insert(tk.END, roll + "\n\n")

# Create main window
root = tk.Tk()
root.title("Dice Rolling Simulator")
root.geometry("800x600")
root.resizable(True, True)
root.configure(bg='light blue')
root.iconphoto(False, PhotoImage(file="src/assets/favicon.png"))

# Create widgets
'''
num_dice_label = tk.Label(root, text="Number of Dice:", bg='light blue', font=("Book Antiqua", 16))
num_dice_entry = tk.Entry(root, bg='white', font=("Maiandra GD", 12, 'bold'), highlightthickness=1, highlightbackground="dark blue", highlightcolor="blue")
sides_label = tk.Label(root, text="Number of Sides:", bg='light blue', font=("Book Antiqua", 16))
sides_entry = tk.Entry(root, bg='white', font=("Maiandra GD", 12, 'bold'), highlightthickness=1, highlightbackground="dark blue", highlightcolor="blue")
roll_button = tk.Button(root, text="Roll Dice", command=roll_button_clicked, fg='dark blue', bg='white', font=("Book Antiqua", 14), bd=1, padx=5, relief='solid', activeforeground="white", activebackground="dark blue")
result_label = tk.Label(root, text="\n", bg='light blue', wraplength=500, font=("Constantia", 16))
view_history_button = tk.Button(root, text="View History", command=view_history, fg='white', bg='dark blue', font=("Book Antiqua", 12, 'bold'), padx=5, bd=1, relief="ridge")
clear_history_button = tk.Button(root, text="Clear History", command=clear_history, bg='red', font=("Book Antiqua", 12, 'bold'), padx=5, bd=1, relief="sunken")
'''
num_dice_label = widget.label(root, "Number of Dice", "light blue", "Book Antiqua", 16)
sides_label = widget.label(root, "Number of Dice", "light blue", "Book Antiqua", 16)
num_dice_entry = widget.entry(root, "white", "Maiandra GD", 12, 1, "dark blue", "blue")
sides_entry = widget.entry(root, "white", "Maiandra GD", 12, 1, "dark blue", "blue")
roll_button = widget.button(root, "Roll Dice", roll_button_clicked, "dark blue", "white", "Book Antiqua", 12, "solid", "white", "dark blue")
result_label = widget.label(root, "\n", "light blue", "Constantia", 16)
view_history_button = widget.button(root, "View History", view_history, "white", "dark blue", "Book Antiqua", 12, "ridge", "white", "dark blue")
clear_history_button = widget.button(root, "Clear History", clear_history, "black", "red", "Book Antiqua", 12, "sunken", "white", "dark blue")

# Bind Enter key to roll_button_clicked
root.bind('<Return>', roll_button_clicked)

# Layout widgets
root.columnconfigure(0, weight=1)
root.columnconfigure(4, weight=1)
root.rowconfigure(0, weight=1)
root.rowconfigure(7, weight=1)

num_dice_label.grid(row=1, column=1, padx=10, pady=5)
num_dice_entry.grid(row=1, column=2, padx=10, pady=5)
sides_label.grid(row=2, column=1, padx=10, pady=5)
sides_entry.grid(row=2, column=2, padx=10, pady=5)
roll_button.grid(row=3, column=1, columnspan=2, padx=10, pady=10)
result_label.grid(row=4, column=1, columnspan=2, padx=10, pady=10)
view_history_button.grid(row=7, column=1, columnspan=1)
clear_history_button.grid(row=7, column=2, columnspan=1)

# Start the GUI event loop
root.mainloop()